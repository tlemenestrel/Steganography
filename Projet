    r[j]=2*int(r[j]//2)+int(v[j])

#on code la chaine dans les pixels suivants
for i in range(8*u):
    r[i+8]=2*int(r[i+8]//2)+int(a[i])
#on recrée l'image rouge 
nr = Image.new("L",(16*p,16*q))
nr = Image.new("L",(w,h))
